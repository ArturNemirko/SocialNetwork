@model SocialNetwork.Models.Entities.Post

@{
    ViewBag.Title = "Create Post";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("CreatePost", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>What's new?</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Description.Content, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Description.Content, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Publish" class="btn btn-default" />
        </div>
    </div>
}

